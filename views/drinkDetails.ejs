<html lang="en">

<head>
  <%- include('layout/head') %>
</head>

<div id="container">
  <%- include('layout/navbar') %>

  <body id="details">
    <h2><%= data.name %></h2>
    <div id="home-info">
      <p><img src="<%= data.image %>" alt="Picture of Cocktail"></p>
    </div>
    
    <div id="lists">
      <ul>
        <% data.measurements.forEach((value, index) => { %>
        <li><%= value %></li>
        <% }) %>
      </ul>
      <ul>
        <% data.ingredients.forEach((value, index) => { %>
        <li><%= value %></li>
        <% }) %>
      </ul>
    </div>
    <p><%= data.instructions %></p>
    <form action="/favorites" method="POST">
      <input type="hidden" name="name" value="<%= data.name %>">
      <input type="hidden" name="instructions" value="<%= data.instructions %>">
      <input type="hidden" name="image" value="<%= data.image %>">
      <input type="hidden" name="ingredients" value="<%= data.ingredients %>">
      <input type="hidden" name="measurements" value="<%= data.measurements %>">
      <button>Add to Favorites</button>
    </form>
    <%- include('layout/footer') %>
    <script src="javascript/app.js"></script>
  </body>
</div>

</html>